<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>chipro-websocket</artifactId>
        <groupId>cn.spark</groupId>
        <version>latest</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>chipro-websocket-biz</artifactId>

    <dependencies>
        <!-- 包括了基本web所需的依赖包及相关配置 -->
        <dependency>
            <groupId>cn.spark</groupId>
            <artifactId>core-web-common</artifactId>
            <version>latest</version>
        </dependency>
        <!-- 包括了基本web所需的依赖包及相关配置 -->
        <dependency>
            <groupId>cn.spark</groupId>
            <artifactId>chipro-websocket-api</artifactId>
            <version>latest</version>
        </dependency>
        <!-- WEB-SOCKET -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-websocket</artifactId>
        </dependency>
        <!-- 消息队列 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-amqp</artifactId>
        </dependency>
<!--        &lt;!&ndash;seata分布式事务解决方案&ndash;&gt;-->
<!--        <dependency>-->
<!--            <groupId>cn.spark</groupId>-->
<!--            <artifactId>distributed-transactios-2pc-seata</artifactId>-->
<!--            <version>1.0.6</version>-->
<!--        </dependency>-->
<!--        &lt;!&ndash;tcc-hmily分布式事务解决方案&ndash;&gt;-->
<!--        <dependency>-->
<!--            <groupId>cn.spark</groupId>-->
<!--            <artifactId>distributed-transactions-tcc-hmily</artifactId>-->
<!--            <version>1.0.6</version>-->
<!--        </dependency>-->

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <fork>true</fork><!-- 如果没有该项配置，肯呢个devtools不会起作用，即应用不会restart -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <delimiters>
                        <delimiter>@</delimiter>
                    </delimiters>
                    <useDefaultDelimiters>false</useDefaultDelimiters>
                </configuration>
            </plugin>
            <!--docker打包-->
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>dockerfile-maven-plugin</artifactId>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/webapp</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>